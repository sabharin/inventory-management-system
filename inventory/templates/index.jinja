{% extends 'base-template.jinja' %}
{% block content %}
<div class="container mx-auto p-4">
    <h3 class="text-center text-2xl font-bold mb-4">Description</h3>
    <div class="flex flex-wrap">
        {% if not warehouses %}
        <div class="w-full md:w-1/2 p-2">
            <h3 class="text-center text-xl font-light">No Locations Data Available Yet</h3>
        </div>
        {% else %}
        <div class="w-full md:w-1/4 p-2">
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead class="bg-gray-200">
                    <tr><th class="py-2 px-4">Location</th></tr>
                </thead>
                <tbody>
                    {% for warehouse in warehouses %}
                    <tr class="border-b"><td class="py-2 px-4">{{ warehouse[1] }}</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
        {% if not products %}
        <div class="w-full md:w-1/2 p-2">
            <h3 class="text-center text-xl font-light">No Product Data Available Yet</h3>
        </div>
        {% else %}
        <div class="w-full md:w-3/4 p-2">
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead class="bg-gray-200">
                    <tr><th class="py-2 px-4">Name</th><th class="py-2 px-4">Count</th><th colspan="2" class="py-2 px-4">Actions</th></tr>
                </thead>
                <tbody>
                    {% for product in products %}
                    <tr class="border-b">
                        <td class="py-2 px-4">{{ product[1] }}</td>
                        <td class="py-2 px-4">{{ product[2] }}</td>
                        {% if product[2] != 0 %}
                        <td class="py-2 px-4">
                            <form action="{{ url_for('reduce', prod_id=product[0], type='product') }}" method="POST" class="inline-form">
                                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">-1</button>
                            </form>
                        </td>
                        {% else %}
                        <td class="py-2 px-4">
                            <a href="{{ url_for('delete', prod_id=product[0], type='product') }}" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Delete</a>
                        </td>
                        {% endif %}
                        <td class="py-2 px-4">
                            <form action="{{ url_for('add', prod_id=product[0], type='product') }}" method="POST" class="inline-form">
                                <button type="submit" class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600">+1</button>
                            </form>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}